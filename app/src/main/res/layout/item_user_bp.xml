<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        android:layout_marginTop="5dp"
        android:elevation="5dp"
        app:cardCornerRadius="5dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="60dp" xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/tv_rank"
                android:text="A"

                android:layout_marginLeft="5dp"
                android:layout_gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:layout_margin="5dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/tv_title"
                    android:text="Best FriendS"
                    android:textSize="14dp"
                    android:maxLines="1"
                    android:textColor="@color/color_222222"
                    android:textStyle="italic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/tv_acc"
                    android:text="99.68ACC"
                    android:textStyle="italic"
                    android:textSize="12dp"
                    android:textColor="@color/color_rank1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
                android:id="@+id/tv_mode"
                android:layout_marginRight="5dp"
                android:textSize="14dp"
                android:layout_gravity="center_vertical"
                android:text="DT"
                android:textColor="@color/color_rank2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView

                android:layout_marginRight="10dp"
                android:id="@+id/tv_pp"
                android:textSize="20dp"
                android:textStyle="italic"
                android:textColor="@color/color_bp"
                android:layout_gravity="center_vertical"
                android:text="443PP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>
    <View
            android:background="@drawable/blue_shape_btn"
            android:layout_width="3dp"
            android:layout_height="60dp"/>
</android.support.v7.widget.CardView>