<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_head"
            android:src="@mipmap/nixo_had"
            android:layout_marginLeft="15dp"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
    <TextView
            android:id="@+id/tv_lv"
            android:text="Lv 1"
            android:textStyle="italic"
            android:textSize="12dp"
            android:textColor="#D81B60"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:text="关注"
            android:textSize="15dp"
            android:textColor="#fff"
            android:background="@drawable/blue_shape_btn"
            android:layout_width="120dp"
            android:gravity="center"
            android:layout_height="30dp"/>
    <TextView
            android:id="@+id/tv_name"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/civ_head"
            android:textColor="#222"
            android:textSize="22dp"
            android:text="\[Nixo\]"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <android.support.v7.widget.CardView
            android:id="@+id/cd_base"
            android:layout_marginTop="10dp"
            android:elevation="5dp"
            app:cardCornerRadius="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <View

                    android:background="@color/color_line"
                    android:layout_width="4dp"
                    android:layout_height="match_parent"/>
            <LinearLayout
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="Country:"
                            android:textSize="14dp"
                            android:textColor="@color/color_222222"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_marginLeft="5dp"
                            android:id="@+id/tv_country"
                            android:textSize="16dp"
                            android:textColor="@color/color_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="Rank:"
                            android:textSize="14dp"
                            android:textColor="@color/color_222222"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_marginLeft="5dp"
                            android:id="@+id/tv_rank"
                            android:textSize="16dp"
                            android:textColor="@color/color_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="CountryRank:"
                            android:textSize="14dp"
                            android:textColor="@color/color_222222"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_marginLeft="5dp"
                            android:id="@+id/tv_c_rank"
                            android:textSize="16dp"
                            android:textColor="@color/color_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="PlayCount:"
                            android:textSize="14dp"
                            android:textColor="@color/color_222222"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_marginLeft="5dp"
                            android:id="@+id/tv_pc"
                            android:textSize="16dp"
                            android:textColor="@color/color_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="Accuracy:"
                            android:textSize="14dp"
                            android:textColor="@color/color_222222"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_marginLeft="5dp"
                            android:id="@+id/tv_acc"
                            android:textSize="16dp"
                            android:textColor="@color/color_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="Watched:"
                            android:textSize="14dp"
                            android:textColor="@color/color_222222"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_marginLeft="5dp"
                            android:id="@+id/tv_watched"
                            android:textSize="16dp"
                            android:textColor="@color/color_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                    <TextView
                            android:text="JoinDate:"
                            android:textSize="14dp"
                            android:textColor="@color/color_222222"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:layout_marginLeft="5dp"
                            android:id="@+id/tv_join"
                            android:textSize="16dp"
                            android:textColor="@color/color_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_bp"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            tools:listitem="@layout/item_user_bp"
            android:layout_below="@+id/cd_base"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
</RelativeLayout>
