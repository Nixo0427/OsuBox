<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_head"
            app:civ_border_color="@color/color_rank1"
            app:civ_border_overlay="false"
            app:civ_border_width="2dp"
            android:layout_marginLeft="15dp"
            android:layout_width="90dp"
            android:layout_height="90dp"/>
    <TextView
            android:id="@+id/tv_lv"
            android:textStyle="italic"
            android:textSize="12dp"
            android:textColor="#D81B60"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="70dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/tv_unset"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="40dp"
            android:text="UnSet"
            android:textSize="15dp"
            android:textColor="#fff"
            android:background="@drawable/red_shape_btn"
            android:layout_width="120dp"
            android:gravity="center"
            android:layout_height="30dp"/>
    <TextView
            android:id="@+id/tv_name"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/civ_head"
            android:textColor="#222"
            android:textSize="22dp"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    <LinearLayout
            android:id="@+id/ll_switch"
            android:layout_below="@id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="40dp">
        <TextView
                android:id="@+id/tv_ppy"
                android:text="PPY"
                android:gravity="center"
                android:textColor="@color/color_line"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <TextView
                android:id="@+id/tv_ppp"
                android:text="PP+"
                android:gravity="center"
                android:textColor="@color/color_line"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
            android:layout_below="@+id/ll_switch"
            android:layout_width="match_parent"
            android:layout_height="2dp">
        <View
                android:id="@+id/v_switch"
                android:layout_weight="1"
                android:background="@color/color_b_rank_d"
                android:layout_width="150dp"
                android:layout_height="2dp"/>
        <View
                android:id="@+id/v_switch2"
                android:background="@color/color_b_rank_d"
                android:layout_width="150dp"
                android:layout_weight="1"
                android:visibility="invisible"
                android:layout_height="2dp"/>

    </LinearLayout>
    <android.support.v4.view.ViewPager
            android:id="@+id/vp_pager"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/ll_switch"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <FrameLayout
                android:id="@+id/fl_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </android.support.v4.view.ViewPager>


</RelativeLayout>
