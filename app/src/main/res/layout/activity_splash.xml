<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:fitsSystemWindows="true"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SplashActivity">
    <RelativeLayout
            android:id="@+id/rv_first"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <View
                android:id="@+id/view_cc"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:visibility="visible"
                android:background="@drawable/blue_circle_c"
                android:layout_width="400dp"
                android:layout_height="400dp"/>

        <TextView
                android:text="1"
                android:textSize="50dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/view_before"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/blue_circle"
                android:layout_width="150dp"
                android:layout_height="150dp"/>

        <LinearLayout
                android:layout_centerVertical="true"
                android:gravity="right|bottom"
                android:layout_centerHorizontal="true"
                android:layout_width="290dp"
                android:layout_height="410dp">
            <View
                    android:id="@+id/cd_login_bg"
                    android:visibility="invisible"
                    android:background="@drawable/shawods_shape5_btn"
                    android:layout_width="280dp"
                    android:layout_height="400dp"
            />
        </LinearLayout>

        <View
                android:textSize="50dp"
                android:textStyle="bold"
                android:textColor="#ffffff"
                android:gravity="center"
                android:id="@+id/view_after"
                android:visibility="invisible"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/blue_shape5_btn"
                android:layout_width="50dp"
                android:layout_height="50dp"/>
        <EditText
                android:transformPivotY="20dp"
                android:id="@+id/et_account"
                android:visibility="invisible"
                android:gravity="center"
                android:textColor="@color/color_222222"
                android:textSize="16dp"
                android:layout_marginTop="300dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:background="@drawable/white_shape_btn"
                android:layout_width="200dp" android:layout_height="50dp"
                android:hint="Osu UserName owo"/>

        <ImageView
                android:transformPivotY="20dp"
                android:id="@+id/iv_join"
                android:src="@mipmap/join2"
                android:visibility="invisible"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/et_account"
                android:layout_marginTop="120dp"
                android:layout_width="80dp"
                android:layout_height="80dp"/>
        <TextView
                android:transformPivotY="20dp"
                android:id="@+id/tv_logo"
                android:text="OSU BOX"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="150dp"
                android:textColor="@color/color_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


    </RelativeLayout>

</RelativeLayout>